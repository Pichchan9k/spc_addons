            <field name="name">Subdistrict Tree</field>
            <field name="model">spc.address.subdistrict</field>
            <field name="arch" type="xml">
                <tree string="Level">
                    <field name="name"/>
                    <field name="name_th"/>
                    <field name="pid" />
                    <field name="district_pid"/>
                    <field name="provice_pid" />
                </tree>
            </field>
        </record>
