<odoo>
    <data>
        <!-- FormView-->
        <record id="hr.import.employee_view_form" model="ir.ui.view">
            <field name="name">Import</field>
            <field name="model">hr.import.employee</field>
            <field name="arch" type="xml">
                <sheet>
                    <group>
                        <field name="data"/>
                    </group>
                </sheet>
            </field>
        </record>

        <record id="hr.import.employee_view_tree" model="ir.ui.view">
            <field name="name">Import</field>
            <field name="model">hr.import.employee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="data"/>
                    <field name="success_row"/>
                    <field name="fail_row"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <!-- End FormView-->

        <!-- SearchView -->
        <record id="view_position_filter" model="ir.ui.view">
            <field name="name">Position Filter</field>
            <field name="model">hr.position</field>
            <field name="arch" type="xml">
                <search string="Position">
                    <field name="name" string="Position"/>
                    <field name="name_th" string="ตำแหน่ง"/>
                </search>
            </field>
        </record>
        <!-- End SearchView -->

        <!-- Act_window-->
        <record id="spc_employee_import" model="ir.actions.act_window">
            <field name="name">Import</field>
            <field name="res_model">hr.import.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- End Act_window-->

        <menuitem id="menu_action_import_employee" parent="hr.menu_human_resources_configuration" action="spc_employee_import" />
    </data>
</odoo>